<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_translate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bt_transplate"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Language output"
            android:textColor="@android:color/background_light" />

        <Spinner
            android:id="@+id/sp_language2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"></Spinner>

        <AutoCompleteTextView
            android:id="@+id/et_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="center"
            android:hint="output here"
            android:textSize="20dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Language input"
            android:textColor="@android:color/background_light" />

        <Spinner
            android:id="@+id/sp_language1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"></Spinner>

        <AutoCompleteTextView
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="3"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:gravity="center"
            android:hint="input here" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/bt_speech2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/bt_transplate"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:src="@drawable/bt_speech" />


    <ImageButton
        android:id="@+id/bt_transplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:src="@drawable/arrow" />

    <ImageButton
        android:id="@+id/bt_speech1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/bt_transplate"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:src="@drawable/speeck_to_text" />

    <ProgressBar
        android:id="@+id/pb_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>


