<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_gold3"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="2*">


                <EditText
                    android:id="@+id/et_tkc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Tên Khoản chi:" />

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SỐ TIỀN:" />

                    <EditText
                        android:id="@+id/editsotienkc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="1"
                        android:ems="10"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/txtvn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VND" />

                    <requestFocus />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRowtr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/textViewtr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGÀY CHI:" />

                    <EditText
                        android:id="@+id/editdatekc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:textColor="#FF0000" />

                    <Button
                        android:id="@+id/bt_datekc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHỌN " />
                </TableRow>
            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btnkhoanchi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Thêm khoản chi" />

                <Button
                    android:id="@+id/bt_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Nhập lại" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>