<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Account " />

    <EditText
        android:id="@+id/edt_register_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_account"
        android:layout_margin="5dp"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/edt_register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_register_fullname"
        android:layout_margin="5dp"
        android:hint="Email"

        />

    <EditText
        android:id="@+id/edt_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_register_email"
        android:layout_margin="5dp"
        android:hint="Password" />

    <EditText
        android:id="@+id/edt_register_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_register_password"
        android:layout_margin="5dp"
        android:hint="Confirm Password" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_register_confirm_password"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:text="Register"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:gravity="center"
        android:text="Already registeed!Login Me" />
</RelativeLayout>
