<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <TextView
        android:id="@+id/dtl_tv_plname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="detail"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/dtl_icon_adress"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/dtl_tv_plname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/address" />

    <TextView
        android:id="@+id/dtl_tv_pladress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dtl_tv_plname"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/dtl_icon_adress"
        android:text="adress"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/dtl_icon_description"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/dtl_tv_pladress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/description" />

    <TextView
        android:id="@+id/dtl_tv_pldescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dtl_tv_pladress"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/dtl_icon_description"
        android:text="description"
        android:textSize="15dp" />

</RelativeLayout>