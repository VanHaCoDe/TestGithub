<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bkap.android.managefinance.pro.AccountActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Textview để hiển thị văn bản -->
        <!-- Các thành phần cơ bản không thể thiếu gồm : width và height -->
        <!-- id : để có thể gọi từ file activity -->
        <!-- gravity : để căn chỉnh văn bản (như bên dưới là căn ở trung tâm khung textview) -->
        <!-- text : là đoạn text hiển thị trên textview mặc định -->
        <!-- textsize : là cỡ chữ của text -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/lbAmountMoney"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingRight="8dp"
                android:text="0.00"
                android:textSize="24dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:layout_weight="4"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:text="$"
                android:textSize="24dp" />
        </LinearLayout>

        <!-- background : để định nghĩa màu nền cho listview (or bất kì widget nào) -->

        <ListView
            android:id="@+id/listAccount"
            android:layout_width="fill_parent"
            android:








































                ="fill_parent"
            android:background="@android:color/white"
            android:divider="#15000000"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>